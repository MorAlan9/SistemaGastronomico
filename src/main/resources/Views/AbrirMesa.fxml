<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="400.0" spacing="0.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gastronomia.sistemaGastronomico.controller.AbrirMesaController">

    <HBox style="-fx-background-color: #66cc99;">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>
        <children>
            <Label fx:id="lblTituloMesa" text="MESA X" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
        </children>
    </HBox>

    <VBox spacing="15.0" style="-fx-background-color: #f9f9f9;" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="100.0" text="Personas *" textFill="#555555">
                    <font>
                        <Font size="14.0" />
                    </font></Label>
                <Spinner fx:id="spinnerPersonas" editable="true" prefHeight="30.0" prefWidth="80.0" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="100.0" text="Camarero *" textFill="#555555">
                    <font>
                        <Font size="14.0" />
                    </font></Label>
                <ComboBox fx:id="comboMozos" maxWidth="1.7976931348623157E308" prefHeight="30.0" promptText="Seleccionar..." HBox.hgrow="ALWAYS" />
            </HBox>

            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                <Label text="Comentario (Opcional)" textFill="#555555">
                    <font>
                        <Font size="14.0" />
                    </font></Label>
                <TextArea fx:id="txtComentario" prefHeight="100.0" wrapText="true" />
            </VBox>

            <HBox alignment="CENTER_RIGHT">
                <padding>
                    <Insets top="10.0" />
                </padding>
                <children>
                    <Button defaultButton="true" mnemonicParsing="false" onAction="#confirmarApertura" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-cursor: hand;" text="Abrir mesa">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                </children>
            </HBox>

        </children>
    </VBox>
</VBox>