<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gastronomia.sistemaGastronomico.controller.VentasController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <Label text="Registro Histórico de Ventas" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>

        <TableView fx:id="tablaVentas" VBox.vgrow="ALWAYS" style="-fx-font-size: 14px;">
            <columns>
                <TableColumn fx:id="colId" prefWidth="60.0" text="Nº Op" />
                <TableColumn fx:id="colFecha" prefWidth="140.0" text="Fecha / Hora" />
                <TableColumn fx:id="colMesa" prefWidth="80.0" text="Mesa" />
                <TableColumn fx:id="colMozo" prefWidth="120.0" text="Atendió" />
                <TableColumn fx:id="colMetodo" prefWidth="120.0" text="Forma Pago" />
                <TableColumn fx:id="colTotal" prefWidth="120.0" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold;" text="TOTAL" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <VBox alignment="CENTER_RIGHT" spacing="5.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
            <children>
                <Label text="TOTAL ACUMULADO EN CAJA" textFill="#7f8c8d">
                    <font><Font size="14.0" /></font>
                </Label>

                <Label fx:id="lblTotalDia" style="-fx-text-fill: #27ae60;">
                    <font><Font name="System Bold" size="30.0" /></font>
                </Label>
            </children>
        </VBox>
    </children>
</VBox>