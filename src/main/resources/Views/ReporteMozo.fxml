<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="450.0" prefWidth="350.0" spacing="15.0"
      style="-fx-background-color: -color-bg-default;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gastronomia.sistemaGastronomico.controller.ReporteMozoController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <Label text="CIERRE DE MOZO" style="-fx-text-fill: -color-accent-fg;">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Separator prefWidth="200.0" />

        <Label text="Seleccione Mozo:" />

        <ComboBox fx:id="comboMozos" prefWidth="250.0" promptText="-- Elegir --" />

        <Button fx:id="btnGenerar" mnemonicParsing="false" onAction="#generarReporte"
                text="VER VENTAS HOY" style="-fx-background-color: -color-accent-emphasis; -fx-text-fill: white; -fx-font-weight: bold;" />

        <Separator prefWidth="200.0" />

        <Label text="Resumen:" style="-fx-font-weight: bold;" />

        <TextArea fx:id="txtResultado" editable="false" prefHeight="200.0" prefWidth="200.0"
                  style="-fx-font-family: 'Monospaced'; -fx-font-size: 14px;" />

        <Button mnemonicParsing="false" onAction="#cerrar" text="Cerrar" cancelButton="true"/>
    </children>
</VBox>