<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.4" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gastronomia.sistemaGastronomico.controller.AdminProductosController">
    <items>
        <AnchorPane minHeight="0.0" minWidth="0.0">
            <children>
                <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <Label text="Productos Actuales">
                        <font><Font name="System Bold" size="18.0" /></font>
                    </Label>
                    <ListView fx:id="listaProductos" VBox.vgrow="ALWAYS" />
                    <Button text="Eliminar Seleccionado" onAction="#eliminarProducto" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" maxWidth="Infinity"/>
                </VBox>
            </children>
        </AnchorPane>

        <AnchorPane minHeight="0.0" minWidth="0.0">
            <children>
                <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                    <Label text="Nuevo / Editar Producto">
                        <font><Font name="System Bold" size="18.0" /></font>
                    </Label>

                    <Label text="Nombre del Plato/Bebida:" />
                    <TextField fx:id="txtNombre" promptText="Ej: Milanesa Napolitana" />

                    <Label text="Precio ($):" />
                    <TextField fx:id="txtPrecio" promptText="Ej: 8500.50" />

                    <Label text="CategorÃ­a:" />
                    <ComboBox fx:id="comboCategoria" maxWidth="Infinity" promptText="Seleccione..." />

                    <Button text="GUARDAR PRODUCTO" onAction="#guardarProducto" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" maxWidth="Infinity" />

                    <Label fx:id="lblInfo" textFill="#2980b9" />
                </VBox>
            </children>
        </AnchorPane>
    </items>
</SplitPane>