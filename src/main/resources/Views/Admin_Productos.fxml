<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gastronomia.sistemaGastronomico.controller.AdminProductosController">
    <children>
        <SplitPane dividerPositions="0.65" layoutX="200.0" layoutY="120.0" prefHeight="600.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <VBox layoutX="123.0" layoutY="56.0" prefHeight="598.0" prefWidth="536.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <Label text="Productos Actuales">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="tablaProductos" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                                        <TableColumn fx:id="colNombre" prefWidth="150.0" text="Nombre" />
                                        <TableColumn fx:id="colCategoria" prefWidth="100.0" text="Categoría" />
                                        <TableColumn fx:id="colTipo" prefWidth="80.0" text="Tipo" />
                                        <TableColumn fx:id="colPrecio" prefWidth="80.0" text="Precio ($)" />
                                        <TableColumn fx:id="colStock" prefWidth="60.0" text="Stock" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>

                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" style="-fx-background-color: #f4f4f4;">
                    <children>
                        <VBox layoutX="49.0" layoutY="68.0" prefHeight="598.0" prefWidth="310.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label text="Nuevo / Editar Producto">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Nombre del Plato/Bebida:" />
                                        <TextField fx:id="txtNombre" promptText="Ej: Milanesa Napolitana" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Precio ($):" />
                                        <TextField fx:id="txtPrecio" promptText="Ej: 8500.50" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Stock Inicial:" />
                                        <TextField fx:id="txtStock" promptText="Ej: 50" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Categoría:" />
                                        <ComboBox fx:id="cmbCategoria" maxWidth="1.7976931348623157E308" promptText="Seleccione..." />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0" style="-fx-background-color: #e0f7fa; -fx-background-radius: 5; -fx-border-color: #b2ebf2; -fx-border-radius: 5;">
                                    <children>
                                        <CheckBox fx:id="chkEsCocina" mnemonicParsing="false" text="¿Requiere Cocina? (Demora)">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </CheckBox>
                                        <Label text="* Si marcas esto, reiniciará el tiempo de espera." textFill="#7f8c8d" wrapText="true">
                                            <font>
                                                <Font size="10.0" />
                                            </font>
                                        </Label>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </VBox>

                                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#guardarProducto" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="GUARDAR PRODUCTO">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>